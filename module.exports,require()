//E APLIQUE DENTRO DO ARQUIVO SOLICITADO, DETERMINADA FUNCAO DO ARQUIVO PUXADO.
//É COMO SOLICITAR MÉTODOS E ATRIBUTOS DE CONSTRUTORES EM C++, UTILIZANDO NODE.JS

module.exports = soma; //exporte a variável soma(que acompanha a funcao de soma nela)
require("./soma") //requerimento da variável com funcao soma dentro, na main - ./soma é o nome do arquivo que possui a variável dentro,
//ou seja, o requerimento solicita o nome do arquivo e utiliza suas variáveis dentro
__________________________________________________

//main
var somar = require("./soma.js");
var subtracao = require("./subtracao");
var divisao = require("./divisao");
var multiplicacao = require("./multiplicacao");

var x = somar(1,2);
console.log(x);

var y = subtracao(2,3);
console.log(y);

var z = multiplicacao(2,3);
console.log(multiplicacao(2,3));

var w = divisao(2,3);
console.log(w);
